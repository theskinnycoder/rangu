{
	"name": "rangu",
	"version": "1.0.1",
	"description": "A color picker for React",
	"private": false,
	"publishConfig": {
		"access": "public"
	},
	"engines": {
		"pnpm": ">=8",
		"node": ">=20"
	},
	"packageManager": "^pnpm@8.12.1",
	"author": {
		"name": "Rahul SriRam",
		"email": "hi@rahulsriram.dev",
		"url": "https://rahulsriram.dev"
	},
	"license": "MIT",
	"homepage": "https://rangu.rahulsriram.dev",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/theskinnycoder/rangu.git"
	},
	"bugs": {
		"url": "https://github.com/theskinnycoder/rangu/issues"
	},
	"keywords": [
		"react",
		"colors",
		"input",
		"accessible",
		"color-picker"
	],
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"module": "./dist/index.mjs",
			"import": "./dist/index.mjs",
			"require": "./dist/index.js",
			"default": "./dist/index.mjs"
		},
		"./package.json": "./package.json"
	},
	"scripts": {
		"dev:tsup": "tsup --watch",
		"dev:storybook": "storybook dev -p 6006",
		"dev": "pnpm dev:tsup & pnpm dev:storybook",
		"build": "tsup --minify",
		"build:storybook": "storybook build",
		"build:all": "pnpm build & pnpm build:storybook",
		"lint": "eslint \"**/*.{js,jsx,ts,tsx}\" --max-warnings 0",
		"lint:fix": "eslint \"**/*.{js,jsx,ts,tsx}\" --max-warnings 0 --fix",
		"format": "prettier --write \"**/*.{js,jsx,ts,tsx}\"",
		"prerelease": "pnpm build",
		"release": "changeset publish"
	},
	"dependencies": {
		"react-aria-components": "^1.2.0"
	},
	"peerDependencies": {
		"react": "^16.8 || ^17.0 || ^18.0",
		"react-dom": "^16.8 || ^17.0 || ^18.0"
	},
	"peerDependenciesMeta": {
		"react": {
			"optional": false
		},
		"react-dom": {
			"optional": false
		}
	},
	"devDependencies": {
		"@changesets/changelog-github": "^0.5.0",
		"@changesets/cli": "^2.27.1",
		"@chromatic-com/storybook": "^1.4.0",
		"@storybook/addon-essentials": "^8.1.1",
		"@storybook/addon-interactions": "^8.1.1",
		"@storybook/addon-links": "^8.1.1",
		"@storybook/blocks": "^8.1.1",
		"@storybook/react": "^8.1.1",
		"@storybook/react-vite": "^8.1.1",
		"@storybook/test": "^8.1.1",
		"@types/node": "^20.12.12",
		"@types/react": "^18.3.2",
		"@types/react-dom": "^18.3.0",
		"@typescript-eslint/eslint-plugin": "^7.9.0",
		"@typescript-eslint/parser": "^7.9.0",
		"@vitejs/plugin-react-swc": "^3.6.0",
		"autoprefixer": "^10.4.19",
		"clsx": "^2.1.1",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-only-warn": "^1.1.0",
		"eslint-plugin-prettier": "^5.1.3",
		"eslint-plugin-react": "^7.34.1",
		"eslint-plugin-react-hooks": "^4.6.2",
		"eslint-plugin-react-refresh": "^0.4.7",
		"eslint-plugin-storybook": "^0.8.0",
		"postcss": "^8.4.38",
		"prettier": "^3.2.5",
		"prettier-plugin-tailwindcss": "^0.5.14",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"storybook": "^8.1.1",
		"tailwind-merge": "^2.3.0",
		"tailwindcss": "^3.4.3",
		"tsup": "^8.0.2",
		"typescript": "^5.4.5",
		"vite": "^5.2.11"
	}
}
